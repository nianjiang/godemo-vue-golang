# Need to package the code first `tar zcf godemo.tar.gz $(ls)` and move it to the same directory as Dokerfile

# Compile the go code, you can specify the golang version
FROM golang:1.25-alpine as build
COPY . /go/src/godemo
WORKDIR /go/src/godemo
RUN tar zxf godemo.tar.gz
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /godemo cmd/godemo/main.go

# compressing binary files
#cd /
#upx -9 godemo


# building images with binary
FROM alpine:latest
MAINTAINER zhufuyi "g.zhufuyi@gmail.com"

# add curl, used for http service checking, can be installed without it if deployed in k8s
RUN apk add curl

COPY --from=build /godemo /app/godemo
COPY --from=build /go/src/godemo/configs/godemo.yml /app/configs/godemo.yml

# http port
EXPOSE 8080


WORKDIR /app

CMD ["./godemo", "-c", "configs/godemo.yml"]
# if you use the Configuration Center, godemo.yml is changed to the Configuration Center configuration.
#CMD ["./godemo", "-c", "configs/godemo.yml", "-enable-cc"]
